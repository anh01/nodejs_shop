<!DOCTYPE html>
<html lang="zh-CN">
    <head>
        <title>微信小店</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="keywords" content="" /> 
        <meta name="description" content="" /> 
        <link rel="stylesheet" href="http://cdn.bootcss.com/bootstrap/3.3.0/css/bootstrap.min.css">
        <link rel="stylesheet" href="/style/admin/main.css">
        <script src="http://cdn.bootcss.com/jquery/1.11.1/jquery.min.js"></script>
        <script src="http://cdn.bootcss.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
        <script type="text/javascript">
            var navIndex=1;
            $(function() {
                 $('#item_class').change(function(){
                    $.get('/admin/item/getSubAttributes/?class_id=' + $('#item_class').val(), function(data){
                        if(data && data.length > 0) {
                            var html = '';
                            $.each(data, function(index, item) {
                                var msg = '<div class="form-group">';
                                msg += '<label for="description" class="col-sm-2 control-label">' + item.name + '</label>';
                                msg += '<div class="col-sm-7">';
                                msg += '<select id="'+item.alias+'" name="'+item.alias+'" class="form-control">';
                                $.each(item.data, function(index, every) {
                                    msg += '<option value='+every.value+'>'+every.name+'</option>';
                                });
                                msg += '</select>'
                                msg += '</div></div>';
                                html += msg;
                            });
                            $('.form-group').eq(3).after(html);
                        }

                    });
                })
            })
        </script>
        <script src="/javascript/admin/nav.js" type="text/javascript"></script>
    </head>
    <body>
        <%- include common/header %>
        <div class="all-container container-fluid">
            <div class="row">
                <%- include common/user_status %>

                <div id="right-content" class="col-xs-7 col-sm-7 col-md-7 col-xs-offset-1 col-sm-offset-1 col-md-offset-1">
                    <div class="row">
                        <form class="shop-add-form form-horizontal" role="form" method="post" action="/admin/<%=data.shop.id%>/item/additem" enctype="multipart/form-data">
                              <div class="form-group">
                                <label for="short_name" class="col-sm-2 control-label">商品名称</label>
                                <div class="col-sm-7">
                                  <input type="text" class="form-control" id="short_name" name="short_name" placeholder="请输入大于2个汉字的商品名称">
                                </div>
                              </div>
                              <div class="form-group">
                                <label for="description" class="col-sm-2 control-label">描述</label>
                                <div class="col-sm-7">
                                  <input type="text" class="form-control" id="description" name="description" placeholder="商品描述">
                                </div>
                              </div>
                              
                              <div class="form-group">
                                <label for="city" class="col-sm-2 control-label">商品类别</label>
                                <div class="col-sm-2">
                                    <select id="item_class" name="item_class" class="form-control">
                                        <option value="-1">--请选择--</option>
                                        <%
                                            if(data.classes && data.classes.length > 0) {
                                                data.classes.forEach(function(item, index) {
                                        %>
                                                    <option value="<%=item.id%>"><%=item.alias%></option>
                                        <%
                                                })
                                            }
                                        %>
                                    </select>
                                </div>
                              </div>

                              <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-7 text-right">
                                  <button type="submit" class="btn btn-primary">添加</button>
                                  <button type="reset" class="btn btn-default">重置</button>
                                </div>
                              </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>