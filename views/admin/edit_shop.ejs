<!DOCTYPE html>
<html lang="zh-CN">
    <head>
        <title>微信小店</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="keywords" content="" /> 
        <meta name="description" content="" /> 
        <link rel="stylesheet" href="http://cdn.bootcss.com/bootstrap/3.3.0/css/bootstrap.min.css">
        <link rel="stylesheet" href="/style/admin/main.css">
        <script src="http://cdn.bootcss.com/jquery/1.11.1/jquery.min.js"></script>
        <script src="http://cdn.bootcss.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
        <script type="text/javascript">
            var navIndex=1;
            $(function() {
                 $('#province').change(function(){
                    $.get('/admin/cities/?province_id=' + $('#province').val(), function(data){
                        var msg = '';
                        var every = '';
                        if(data) {
                            $.each(data, function(index, item) {
                                every += '<option value='+ item.id+'>'+item.area_name+'</option>';
                            })
                        }
                        msg = '<select name=\'city\'>'+every+'</select>';
                        $('#city').html(msg);
                    });
                })
            })
        </script>
        <script src="/javascript/admin/nav.js" type="text/javascript"></script>
    </head>
    <body>
        <%- include common/header %>
        <div class="all-container container-fluid">
            <div class="row">
                <%- include common/user_status %>

                <div id="right-content" class="col-xs-7 col-sm-7 col-md-7 col-xs-offset-1 col-sm-offset-1 col-md-offset-1">
                    <div class="row">
                        <form class="shop-add-form form-horizontal" role="form" method="post" action="/admin/shop/editshop/<%=data.shop.id%>/">
                              <div class="form-group">
                                <label for="short_name" class="col-sm-2 control-label">店铺名称</label>
                                <div class="col-sm-7">
                                  <input type="text" class="form-control" id="short_name" name="short_name" value="<%=data.shop.short_name%>" placeholder="请输入大于2个汉字的店铺名称">
                                </div>
                              </div>
                              <div class="form-group">
                                <label for="description" class="col-sm-2 control-label">描述</label>
                                <div class="col-sm-7">
                                  <input type="text" class="form-control" id="description" name="description" value="<%=data.shop.description%>" placeholder="店铺描述">
                                </div>
                              </div>
                              <div class="form-group">
                                <label for="tips" class="col-sm-2 control-label">首页提示语</label>
                                <div class="col-sm-7">
                                  <input type="text" class="form-control" id="tips" name="tips" value="<%=data.shop.tips%>" placeholder="请输入不超过100个字符的提示语">
                                </div>
                              </div>
                              <div class="form-group">
                                <label for="province" class="col-sm-2 control-label">省份</label>
                                <div class="col-sm-2">
                                    <select id="province" name="province" class="form-control">
                                        <option value="-1" selected=selected>----</option>
                                        <%
                                            if(data.provinces) {
                                                data.provinces.forEach(function(item, index) {
                                                  if(data.shop.province == item.id) {
                                        %>
                                                    <option value="<%=item.id%>" selected=selected><%=item.area_name%></option>  
                                        <%
                                                  } else {
                                        %>
                                                    <option value="<%=item.id%>"><%=item.area_name%></option>
                                        <%
                                                  }
                                                })
                                              }
                                        %>
                                    </select>
                                </div>
                              </div>
                              <div class="form-group">
                                <label for="city" class="col-sm-2 control-label">城市</label>
                                <div class="col-sm-2">
                                    <select id="city" name="city" class="form-control">
                                        <%
                                            if(data.cities) {
                                                data.cities.forEach(function(item, index) {
                                                  if(data.shop.city == item.id) {
                                        %>
                                                    <option value="<%=item.id%>" selected=selected><%=item.area_name%></option>  
                                        <%
                                                  } else {
                                        %>
                                                    <option value="<%=item.id%>"><%=item.area_name%></option>
                                        <%
                                                  }
                                                })
                                              }
                                        %>
                                    </select>
                                </div>
                              </div>
                              <div class="form-group">
                                <label for="address" class="col-sm-2 control-label">店铺地址</label>
                                <div class="col-sm-7">
                                  <input type="text" class="form-control" id="address" name="address" value="<%=data.shop.address%>" placeholder="请输入不超过100个字符店铺地址">
                                </div>
                              </div>
                              <div class="form-group">
                                <label for="logo" class="col-sm-2 control-label">店铺LOGO</label>
                                <div class="col-sm-7">
                                  <input type="text" class="form-control" id="logo" name="logo" placeholder="店铺LOGO">
                                </div>
                              </div>
                              <div class="form-group">
                                <label for="publicity_photo" class="col-sm-2 control-label">店铺宣传图</label>
                                <div class="col-sm-7">
                                  <input type="text" class="form-control" id="publicity_photo" name="publicity_photo" placeholder="宣传图在宝贝详情中显示">
                                </div>
                              </div>
                              <div class="form-group">
                                <label for="taobao_link" class="col-sm-2 control-label">淘宝地址</label>
                                <div class="col-sm-7">
                                  <input type="text" class="form-control" id="taobao_link" name="taobao_link" value="<%=data.shop.taobao_link%>" placeholder="请输入淘宝地址">
                                </div>
                              </div>

                              <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-7 text-right">
                                  <button type="submit" class="btn btn-primary">添加</button>
                                  <button type="reset" class="btn btn-default">重置</button>
                                </div>
                              </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>