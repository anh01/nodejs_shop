            <select name="shop_province">
                <%
                    if(data.provinces) {
                        for(var i = 0; i < data.provinces.length; i++) {
                %>
                            <option value="<%=data.provinces[i].area_name%>"><%=data.provinces[i].area_name%></option>
                <%            
                        }
                    }
                %>
            </select><br>
            <input type="submit" value="创建店铺">
        </form>
    </body>
</html>