<!DOCTYPE html>
<html lang="zh-CN">
    <head>
        <title><%=data.shop.short_name%> - 微信小店</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="keywords" content="<%=data.shop.short_name%>, <%=data.shop.description%>, 微信小店" /> 
        <meta name="description" content="<%=data.shop.short_name%>, <%=data.shop.description%>, 淘宝地址:<%=data.shop.taobao_link%>, 微信小店" /> 
        <link rel="stylesheet" href="http://cdn.bootcss.com/bootstrap/3.3.0/css/bootstrap.min.css">
        <link rel="stylesheet" href="/style/main.css">
        <script src="http://cdn.bootcss.com/jquery/1.11.1/jquery.min.js"></script>
        <script src="http://cdn.bootcss.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
        <script src="/javascript/scroll.js" type="text/javascript"></script>
        <script type="text/javascript">
          var navIndex = 0;
        </script>
        <script src="/javascript/nav.js" type="text/javascript"></script>
    </head>
    <body>
        <%- include header %>
        <div class="container-fluid">
            
            <%
                if(data.shop.ads && data.shop.ads.length > 0) {
            %>
            <div class="row">
                <div id="myCarousel" class="carousel slide">
                 <ol class="carousel-indicators">
                    <%
                        data.shop.ads.forEach(function(item, index) {
                            if(index == 0) {
                    %>
                                <li data-target="#myCarousel" data-slide-to="<%=index%>" class="active"></li>
                    <%
                            } else {
                    %>
                                <li data-target="#myCarousel" data-slide-to="<%=index%>"></li>
                    <%
                            }
                        })
                    %>
                 </ol>   
                 <div class="carousel-inner">
                    <%
                        data.shop.ads.forEach(function(item, index) {
                            if(index == 0) {
                    %>
                                <div class="item active">
                                   <a href="<%=item.link%>"><img src="<%=locals.settings.img_path%>/<%=item.pic_url%>" alt="<%=item.description%>" style="height:200px"></a>
                                </div>
                    <%
                            } else {
                    %>
                                <div class="item">
                                   <img src="<%=locals.settings.img_path%>/<%=item.pic_url%>" alt="<%=item.description%>" style="height:200px">
                                </div>   
                    <%
                            }
                        })
                    %>
                 </div>
                </div> 
            </div>
            <%
                }
            %>
              <div class="row">
                <p class="hd_intro"><%=data.shop.tips%></p>
                <h3 class="i_title abs"><span class="i_title_sign">&nbsp;</span>店长推荐</h3>
              </div>

              <%
                  if(data.items.result.length > 0) {
              %>
                      <div class="index_list row">
                      <ul class="i_ul rel" id="top_ul">
              <%
                    for(var i = 0; i < data.items.result.length; i++) {
              %>
                      <li class="i_li left">
                        <a href="/item/<%=data.items.result[i].encrypt%>.html">
                          <img src="/<%=data.items.result[i].pic_url%>">
                          <p class="i_txt"><%=data.items.result[i].short_name%></p>
                          <p class="i_pri">￥<%=data.items.result[i].price%></p>
                        </a>
                      </li>
              <%
                    }
              %>
                      </ul>
                    </div>
              <%
                  }
              %>
        </div>
        <%- include footer%>

    </body>

</html>